variant: openshift
version: 4.19.0
metadata:
  name: 99-worker-multipath
  labels:
    machineconfiguration.openshift.io/role: worker
storage:
  files:
    - path: /etc/multipath.conf
      mode: 0644
      overwrite: true
      contents:
        inline: |
          defaults {
                  user_friendly_names yes
                  find_multipaths yes
          }
          blacklist {
          }
systemd:
  units:
    - name: multipathd.service
      enabled: true

